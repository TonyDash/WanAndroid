<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="category"
            type="com.cjy.networklibrary.entity.Category" />
    </data>

    <CheckedTextView
        android:id="@+id/ctvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/selector_bg_category_item"
        android:checked="@{category.checked}"
        android:textColor="@color/selector_color_category_item"
        android:textSize="13sp"
        htmlText="@{category.name}" />
</layout>